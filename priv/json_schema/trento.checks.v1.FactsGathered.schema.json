{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "execution_id": {
      "type": "string",
      "format": "uuid"
    },
    "agent_id": {
      "type": "string",
      "format": "uuid"
    },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": ["number", "string", "boolean"]
          }
        },
        "required": ["check_id", "name", "value"]
      }
    }
  },
  "required": ["execution_id", "agent_id", "facts"]
}
